<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.PropertyAnimatorActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/value_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ValueAnimator"/>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/object_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ObjectAnimator的淡出淡入"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Android Studio"
                android:textSize="15dp"
                android:id="@+id/tv1"/>
            <Button
                android:id="@+id/object_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ObjectAnimator的放大缩小"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Android Studio"
                android:textSize="15sp"
                android:id="@+id/tv2"/>
            <Button
                android:id="@+id/object_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ObjectAnimator的平移"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Android Studio"
                android:textSize="15sp"
                android:id="@+id/tv3"/>
            <Button
                android:id="@+id/object_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ObjectAnimator的旋转"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Android Studio"
                android:textSize="15sp"
                android:id="@+id/tv4"/>
            <Button
                android:id="@+id/object_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ObjectAnimator的组合动画"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Android Studio"
                android:textSize="15sp"
                android:id="@+id/tv5"/>
            <Button
                android:id="@+id/object_btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用XML来进行动画操作"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Android Studio"
                android:textSize="15sp"
                android:id="@+id/tv6"/>
            <Button
                android:id="@+id/stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止组合动画"/>

        </LinearLayout>

    </ScrollView>




</LinearLayout>
