<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <com.hsf.mypullToRefresh.view.MeiTuanRefreshFirstView
            android:id="@+id/first_view"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            />
        <com.hsf.mypullToRefresh.view.MeiTuanRefreshSecondView
            android:id="@+id/second_view"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:visibility="gone"
            />
        <com.hsf.mypullToRefresh.view.MeiTuanRefreshThirdView
            android:id="@+id/third_view"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_pull_to_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="下拉刷新"
            />
    </LinearLayout>
  <!--  <TextView
        android:id="@+id/tv_refresh_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="上次刷新时间："/>-->


</LinearLayout>
